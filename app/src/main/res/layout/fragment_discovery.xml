<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_eaeaea"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:titleBarTitle="设置"/>
<android.support.constraint.ConstraintLayout
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cl_add"
    app:layout_constraintTop_toBottomOf="@id/title_bar"
    android:paddingTop="10dp">

    <EditText android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/et_friend"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="输入好友账号添加好友"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_add_friend"
        android:layout_marginLeft="20dp"/>

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_add_friend"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/add"
        app:layout_constraintLeft_toRightOf="@id/et_friend"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="4dp"/>

</android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_create_group"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_add">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/et_create_group"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="输入创建群组的名称"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_create_group"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_create_group"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/add"
        app:layout_constraintLeft_toRightOf="@id/et_create_group"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="4dp"/>

</android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_add_group"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_create_group">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/et_group"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="输入要加入的群组id"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_add_group"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_add_group"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/add"
        app:layout_constraintLeft_toRightOf="@id/et_group"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="4dp"/>

</android.support.constraint.ConstraintLayout>
<android.support.constraint.ConstraintLayout
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cl_zhihu"
    android:paddingTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/cl_add_group"
    android:paddingBottom="10dp"
    android:layout_marginTop="12dp">

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_zhihu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_drawer_zhihu"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tv_zhihu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/iv_zhihu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="知乎日报"
        android:textSize="16sp"/>

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
<android.support.constraint.ConstraintLayout
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cl_it_info"
    android:paddingTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/cl_zhihu"
    android:paddingBottom="10dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_it"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_drawer_gold"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tv_it"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/iv_it"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="IT资讯"
        android:textSize="16sp"/>

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
<android.support.constraint.ConstraintLayout
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/cl_tencent"
    android:paddingTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/cl_it_info"
    android:paddingBottom="10dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:id="@+id/iv_tencent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:src="@drawable/tencent_news"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tv_tencent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/iv_tencent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="腾讯新闻"
        android:textSize="16sp"/>

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

    <Button
        android:background="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btn_logout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="退出登录"
        android:textColor="#FF0000"
        android:layout_marginBottom="20dp"/>

</LinearLayout>