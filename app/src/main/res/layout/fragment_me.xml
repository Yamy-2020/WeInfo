<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_eaeaea"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.MeFragment"
    android:orientation="vertical">
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:titleBarTitle="我的"/>
    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_setting"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_add_group"
        android:paddingBottom="10dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:id="@+id/iv_setting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/settings"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_setting"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/iv_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="设置"
            android:textSize="16sp"/>

        <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_map"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_add_group"
        android:paddingBottom="10dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:id="@+id/iv_map"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/address"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_map"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/iv_map"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="百度地图"
            android:textSize="16sp"/>

        <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_collect"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_add_group"
        android:paddingBottom="10dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:id="@+id/iv_collect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/umeng_socialize_fav"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_collect"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/iv_collect"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="收藏"
            android:textSize="16sp"/>

        <ImageView
            android:layout_height="30dp"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_sc"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_add_group"
        android:paddingBottom="10dp"
        android:layout_marginTop="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/dp_30"
            android:textSize="@dimen/dp_20" />
        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/sc"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_230"
        >
        <Button
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/btn_logout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="退出登录"
            android:textColor="#FF0000"
            android:layout_marginBottom="20dp"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>